{
  "name": "narrate",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "narrate": "dist/bin/narrate.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/server.ts",
    "start": "node dist/src/server.js",
    "web:dev": "npm --prefix apps/web run dev",
    "web:build": "npm --prefix apps/web run build",
    "web:preview": "npm --prefix apps/web run preview",
    "cli": "tsx bin/narrate.ts",
    "validate": "tsx bin/narrate.ts validate",
    "inspect": "tsx bin/narrate.ts inspect",
    "test": "vitest run"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "bcryptjs": "^2.4.3",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^2.0.16",
    "tsup": "^8.2.4",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^2.1.9",
    "supertest": "^6.3.4"
  }
}
